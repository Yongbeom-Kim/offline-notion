$HOSTNAME {
	redir https://v1.{$HOSTNAME}{uri} 301
}

v1.{$HOSTNAME} {

    handle_path /api/* {
        reverse_proxy backend:3001
    }

    handle /auth {
        reverse_proxy voidauth:3000
    }
    
    handle /auth/* {
        reverse_proxy voidauth:3000
    }

    handle {
        reverse_proxy client:3000
    }
}
